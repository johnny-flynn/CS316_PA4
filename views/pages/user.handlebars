<div class="main">
            <div class="col-md-6 col-sm-12">
               <div class="login-form">
                  <form method="POST">
                    <h1>Update Account</h1>
                     <div class="form-group">
                         <label>User Name</label>
                        <input type="text" class="form-control" value="{{name}}" id="name" name="name" required>
                     </div>
                     <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" value="{{email}}" id="email" name="email" required/>
                     </div>
                     <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" value="{{phone}}" id="phone" name="phone" required/>
                     </div>
                     <button type="submit" class="btn btn-black">Update</button>
                  </form>
               </div>
            </div>
         </div>