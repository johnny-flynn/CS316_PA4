<div class="alert alert-danger" role="alert" {{#unless login}} style="display: none" {{/unless}}>
    Incorrect email/password!
</div>
<div class="alert alert-success" role="alert" {{#unless usercreated}} style="display: none" {{/unless}}>
    User created!
</div>
<div class="main">
            <div class="col-md-6 col-sm-12">
               <div class="login-form">
                  <form method="POST">
                    <h1>Sign In</h1>
                     <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="email" name="email" required/>
                     </div>
                     <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required/>
                     </div>
                     <button type="submit" class="btn btn-black">Sign In</button>
                  </form>
               </div>
            </div>
         </div>