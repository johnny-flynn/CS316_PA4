<div class="alert alert-warning" role="alert" {{#unless passmatch}} style="display: none" {{/unless}}>
    Passwords do not match!
</div>
<div class="alert alert-warning" role="alert" {{#unless userexists}} style="display: none" {{/unless}}>
    User already exists!
</div>
<div class="alert alert-warning" role="alert" {{#unless emailuse}} style="display: none" {{/unless}}>
    Email already in use!
</div>

<div class="main">
            <div class="col-md-6 col-sm-12">
               <div class="login-form">
                  <form method="POST">
                    <h1>Sign Up</h1>
                     <div class="form-group">
                        <input type="text" class="form-control" placeholder="User Name" id="name" name="name" required/>
                     </div>
                     <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email" id="email" name="email" required/>
                     </div>
                     <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" id="password" name="password" required/>
                     </div>
                     <div class="form-group">
                        <input type="password" class="form-control" placeholder="Retype Password" id="verified_password" name="verified_password" required/>
                     </div>
                     <div class="form-group">
                        <input type="text" class="form-control" placeholder="Phone" id="phone" name="phone" required/>
                     </div>
                     <button type="submit" class="btn btn-black">Sign Up</button>
                  </form>
               </div>
            </div>
         </div>